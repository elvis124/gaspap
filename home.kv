#screen for ordering
<OrderingScreen>:
    name: 'orderingscreen'
    GridLayout:
        rows: 4
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: [.9,9,.9,1]
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            cols: 1
            size_hint: (1, .05)
            padding: 4
            spacing: 1.5
            orientation: 
            canvas.before:
                Color:
                    rgba: [.9,9,.9,1]
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                text: 'Fill in the information below and search ' 
                color: [.0, .4, .4,1]
        GridLayout:
            cols: 2
            size_hint: (1, .2)
            padding: 10
            spacing: 5
            orientation: 
            canvas.before:
                Color:
                    rgba: [1,1,1,0]
                Rectangle:
                    size: self.size
                    pos: self.pos
# : import r rando.random3
# : set d round
            Smooth1Button:
                id: n_type
                text: 'Type'
                values: ['k-gas', 'Total']
                size_hint: (1,.1)
                color: [.0, .4, .4,1]
            Smooth2Button:
                id: weight
                text: 'weight'
                input_filter: 'int'
                values: ['5,', '8', '10', '14', '18']
                size_hint: (1, .1)
                color: [.0, .4, .4,1]
            Smooth3Button:
                id: units
                text: 'units'
                size_hint: (1, .1)
                input_filter: 'int'
                values: ['1', '2']
                color: [.0, .4, .4,1]
            Stroke4TextInput:
                id: where_to
                hint_text: 'where to'
                size_hint: (1, .1)

        GridLayout:
            cols: 1
            size_hint: (1,.2)
            padding:10
            spacing: 1.5
            Smooth5Button:
                id: search
                text: 'Search'
                size_hint: (1, .05)
                border_radius:[18,18,2,2]
                on_press: root.search()
            Label:
                text: 'press on the shop of your choice and make and make an order'
                color: [.0, .4, .4,1]
                size_hint: (1, .05)
        ScrollView:
            size_hint: (1, .8)
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
            GridLayout:
                id: displayofshops
                cols: 1
                padding: 10
                spacing: 5
                canvas.before:
                    Color:
                        rgba: [.9,9,.9,1]
                    Rectangle:
                        size: self.size
                        pos: self.pos
                Label:
                    text: 'hallow'
